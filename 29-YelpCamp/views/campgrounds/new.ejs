<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <h1 class="text-center">New Campgrounds</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST"> 
            <div class="mb-3">
                <label class="form-label" for="name" id="name">Name: </label>
                <input 
                    type="text" 
                    class="form-control"
                    id="title-input" 
                    name="camp[title]" 
                    placeholder="Camp Name">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location" id="location">Location: </label>
                <input 
                    type="text" 
                    class="form-control"
                    id="location-input" 
                    name="camp[location]" 
                    placeholder="City, State">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description" id="description">Description: </label>
                <textarea
                    type="text" 
                    class="form-control"
                    id="location-input" 
                    name="camp[description]" 
                    placeholder="A brief description of your visit!"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price" id="price">Price per Night: </label>
                <div class="input-group mb-3">
                    <label class="input-group-text">$</label>
                    <input
                        type="number" 
                        class="form-control"
                        id="location-input" 
                        name="camp[price]"
                        placeholder="0.00">
                    </input>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="img" id="img" >Image: </label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="img" 
                    name="camp[img]">
            </div>
            <button class="btn btn-primary mt-2">Submit</button>
        </form>
    
    </div>
</div>
