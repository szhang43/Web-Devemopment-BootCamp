<% layout('layouts/boilerplate') %>

<div class="container my-3">
    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%= camp.img %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h2 class="card-title"><%= camp.title %></h2>
              <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Price per Night : $<%= camp.price %></li>
            </ul>
            <div class="card-body d-flex justify-content">
                <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-warning mx-1">Edit</a>
                <form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST"class="mx-2">
                    <button class="card-link btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <div class="card-footer">
            2 days ago
        </div>
        <div class="my-3">
            <a href="/campgrounds">back to campgrounds</a>
        </div>
    </div>
</div>

