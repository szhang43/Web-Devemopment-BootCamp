<% layout('layouts/boilerplate') %>

    <h1>Edit Your Campground</h1>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST"> 
        <div class="new-form">
            <label>Name: </label>
            <input 
                type="text" 
                id="title-input" 
                name="camp[title]" 
                placeholder="Camp Name"
                value="<%= camp.title %>">

            <br><br>

            <label>Location: </label>
            <input 
                type="text" 
                id="location-input" 
                name="camp[location]" 
                placeholder="City, State"
                value="<%= camp.location %>">
        </div>

        <br><br>

        <button>Submit</button>
    </form>
