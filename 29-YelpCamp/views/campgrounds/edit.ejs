<% layout('layouts/boilerplate') %>

    <h1>Edit Your Campground</h1>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST"> 
        <div class="new-form">
            <label class="form-label">Name: </label>
            <input 
                type="text" 
                id="title-input" 
                class="form-control"
                name="camp[title]" 
                placeholder="Camp Name"
                value="<%= camp.title %>">


            <label class="form-label">Location: </label>
            <input 
                type="text" 
                id="location-input" 
                class="form-control"
                name="camp[location]" 
                placeholder="City, State"
                value="<%= camp.location %>">
        </div>

        <div class="mb-3">
            <label class="form-label" for="description" id="description">Description: </label>
            <textarea
                type="text" 
                class="form-control"
                id="location-input" 
                rows="10"
                cols="20"
                name="camp[description]"><%= camp.description %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price" id="price">Price per Night: </label>
            <div class="input-group mb-3">
                <label class="input-group-text">$</label>
                <input
                    type="number" 
                    class="form-control"
                    id="location-input" 
                    name="camp[price]"
                    value="<%= camp.price %>">
                </input>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="img" id="img" >Image: </label>
            <input 
                type="text" 
                class="form-control" 
                id="img" 
                name="camp[img]"
                value="<%= camp.img %>">
        </div>
        <button class="btn btn-primary my-3">Update Campground</button>

        <a href="/campgrounds">Back to Campground</a>
    </form>
