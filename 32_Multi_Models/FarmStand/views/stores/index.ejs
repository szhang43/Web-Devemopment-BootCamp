<%- include('../partials/head')%>
<%- include('../partials/navbar')%>

<% for(let store of stores){ %>
    <div class="card">
        <div class="card-header">
            <%= store.location %>
        </div>
        <div class="card-body">
        <h2 class="card-title"> <%= store.name %> </h2>
        <p class="card-text"><%= store.description %></p>
        <p class="card-text"><%= store.email %></p>
        <p><%= store._id %></p>
        <a href="/stores/<%= store._id %>/products/new" class="btn btn-primary">Add Product</a>       
        </div>
    </div>
<% } %>
